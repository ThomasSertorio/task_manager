<%= form_for(@task) do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :priority %>
  <%= f.number_field :priority %>

  <%= f.label :creation_date %>
  <%= f.date_field :creation_date %>

  <%= f.submit %>
<% end %>
